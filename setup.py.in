#!/usr/bin/env python

from distutils.core import setup, Extension

setup(name = 'libxfoil',
      version = '${LIBXFOIL_VERSION}',
      py_modules = ['xfoil_interface_wrap', 'xfoil_interface'],
      ext_modules = [Extension('_xfoil_interface',
                               sources=['python/xfoil_interface.i'],
                               libraries=['xfoil'],
                               library_dirs=['${CMAKE_INSTALL_PREFIX}/lib${LIB_SUFFIX}'],
                               runtime_library_dirs=['${CMAKE_INSTALL_PREFIX}/lib${LIB_SUFFIX}'],
                               include_dirs=['${CMAKE_INSTALL_PREFIX}/include'])],
      package_dir = {'': 'python'}
      )
